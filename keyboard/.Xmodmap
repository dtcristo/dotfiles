!--------------------------------------
! Set Caps to Ctrl, Ctrl+Caps to Caps
! and Ctrl+{hjkl} to arrow keys
!--------------------------------------
! Clear modifiers
clear      lock
clear   control
clear      mod1
clear      mod2
clear      mod3
clear      mod4
clear      mod5
! Remap Control_L key
keycode      37 = Mode_switch
! Vim arrow keys
keycode      43 = h H Left Left
keycode      44 = j J Down Down
keycode      45 = k K Up Up
keycode      46 = l L Right Right
! Remap Caps_Lock key
keycode      66 = Control_L NoSymbol Caps_Lock
! Remap modifiers
add     control = Control_L Control_R
add        mod1 = Alt_L Alt_R Meta_L
add        mod2 = Num_Lock
add        mod3 = Hyper_L
add        mod4 = Super_L Super_R
add        mod5 = ISO_Level3_Shift Mode_switch
